{
    "name": "soupmix/elasticsearch",
    "type": "library",
    "description": "Simple Elasticsearch abstraction layer adapter to handle CRUD operations.",
    "keywords": ["database", "abstraction layer" ,"adapters","elasticsearch"],
    "homepage": "https://github.com/soupmix/elasticsearch",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehmet Korkmaz",
            "email": "mehmet@mkorkmaz.com",
            "homepage": "https://mkorkmaz.com"
        }
    ],
    "require": {
        "soupmix/base": "dev-master",
        "elasticsearch/elasticsearch": "~5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "satooshi/php-coveralls": "~1.0.1",
        "phpunit/phpcov": "^4.0",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Soupmix\\": "src/"
        }
    },
    "scripts": {
        "test": [
